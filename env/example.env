# UMS Application Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-256-bits-long
JWT_ACCESS_TOKEN_EXPIRY=3600000
JWT_REFRESH_TOKEN_EXPIRY=86400000

# Email Configuration
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_FROM=your-email@gmail.com

# SMS Configuration
TEXTBELT_API_KEY=your-textbelt-api-key

# KYC Configuration
SUREPASS_API_TOKEN=your-surepass-api-token

# Application Configuration
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8085

# Optional: Aerospike Configuration (for production)
# AEROSPIKE_HOSTS=localhost:3000
# AEROSPIKE_NAMESPACE=test
# AEROSPIKE_USERNAME=your-aerospike-username
# AEROSPIKE_PASSWORD=your-aerospike-password

# Optional: Redis Configuration (for production caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# Optional: Monitoring Configuration
# PROMETHEUS_ENABLED=true
# GRAFANA_ENABLED=true 